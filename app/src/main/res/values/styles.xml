<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/app_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/default_text_color</item>
        <item name="textAppearanceSubtitle1">@style/customTextStyle</item>
        <item name="textAppearanceHeadline4">@style/customNoInternetTextStyle</item>
    </style>

    <style name="customTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="customNoInternetTextStyle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/default_text_color</item>
    </style>

</resources>
